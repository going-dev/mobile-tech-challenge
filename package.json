{
  "name": "going-mobile-tech-challenge",
  "version": "0.1.0",
  "description": "Going's mobile engineering technical challenge",
  "repository": {
    "type": "git",
    "url": "git@github.com:going-dev/mobile-tech-challenge.git"
  },
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "postinstall": "pnpm run build",
    "mobile": "pnpm run --filter @going-mobile/tech-challenge-app",
    "commit": "git cz",
    "prepare": "husky install",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.4.4",
    "@semantic-release/changelog": "^6.0.2",
    "@semantic-release/git": "^10.0.1",
    "commitizen": "^4.3.0",
    "commitlint": "^17.4.4",
    "commitlint-config-gitmoji": "^2.3.1",
    "cz-emoji": "1.3.2-canary.2",
    "husky": "^8.0.0",
    "semantic-release": "^20.1.1",
    "semantic-release-gitmoji": "^1.6.3",
    "tsup": "^6.6.3",
    "turbo": "latest",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.12.2",
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    },
    "cz-emoji": {
      "types": [
        {
          "name": "breaking",
          "code": ":boom:",
          "emoji": "üí•",
          "description": "Introduce a breaking change"
        },
        {
          "name": "feat",
          "code": ":sparkles:",
          "emoji": "‚ú®",
          "description": "Introduce a new feature"
        },
        {
          "name": "fix",
          "code": ":bug:",
          "emoji": "üêõ",
          "description": "Fix a bug"
        },
        {
          "name": "chore",
          "code": ":broom:",
          "emoji": "üßπ",
          "description": "Changes that don't modify any source or test files"
        },
        {
          "name": "release",
          "code": ":bookmark:",
          "emoji": "üîñ",
          "description": "Release the next version"
        },
        {
          "name": "wip",
          "code": ":construction:",
          "emoji": "üöß",
          "description": "Work in progress"
        }
      ],
      "skipQuestions": [
        "body",
        "scope",
        "issues",
        "breaking"
      ]
    }
  }
}
